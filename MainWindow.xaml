<Window x:Class="GPR5100_Dateikonvertierung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPR5100_Dateikonvertierung"
        mc:Ignorable="d"
        Title="Dateikonvertierung" Height="300" Width="450" MinHeight="300" MinWidth="450">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Width="400" Height="70" Orientation="Horizontal" VerticalAlignment="Top">
                <TextBox x:Name="Txt_SelectedPath" Width="300" Height="30"/>
                <Button x:Name="Btn_SelectFile" Width="100" Height="30" Content="Select File" Click="OnClick_SelectFile"/>
            </StackPanel>
            <Button x:Name="Btn_SaveAs" Width="100" Height="30" Content="Save As" Click="OnClick_SaveAs"/>
        </StackPanel>
    </Grid>
</Window>
